<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:background="@drawable/pizza" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:id="@+id/imageView2"
        android:background="@drawable/ch" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:id="@+id/imageView3"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@drawable/f1" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/imageView4"
        android:layout_row="0"
        android:layout_column="4"
        android:background="@drawable/f2" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_row="0"
        android:layout_column="15" />

    <ImageView
        android:layout_width="133dp"
        android:layout_height="170dp"
        android:id="@+id/imageView5"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@drawable/f3" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/imageView6"
        android:layout_row="1"
        android:layout_column="4"
        android:background="@drawable/f4" />

    <ImageView
        android:layout_width="138dp"
        android:layout_height="170dp"
        android:id="@+id/imageView7"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@drawable/f5" />

    <ImageView
        android:layout_width="137dp"
        android:layout_height="170dp"
        android:id="@+id/imageView8"
        android:layout_row="2"
        android:layout_column="2"
        android:background="@drawable/pizza" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/imageButton"
        android:layout_row="2"
        android:layout_column="4"
        android:background="@drawable/f8" />


</GridLayout>
